<!DOCTYPE html>
<html>
    <head>
        <title>Manage Posts - theJobListr</title>
        <%- include('../templates/html-head'); %>
    </head>
    <body>
        <%- include('../templates/header'); %>
        <%- include('../templates/sidebar'); %>
        <div class="body">
            <h1 class="title">Manage Posts</h1>
            <div class="posts-list">
                <% posts.forEach(post => { %>
                    <div class="post">
                        <span class="title"><span class="id"><%= post.id %></span><%= post.title %></span>
                        <div class="right">
                            <a class="icon" href="<% config.admin.root %>/editPost/<%= post.id %>"><span class="fa fa-edit"></span></a>
                            <a class="icon delete" href="<% config.admin.root %>/deletePost/<%= post.id %>"><span class="fa fa-trash"></span></a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </body>
</html>